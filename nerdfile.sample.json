{
	"configuration": {
		"slack": {
			"webhook": "***REMOVED***",
			"channel": "@cdmbr",
			"icon": ":vbyte:",
			"bot": "nerdployer-test"
		},
		"awscli": {
			"region": "us-east-1"
		}
	},
	"flow": {
		"steps": [{
			"name": "regions",
			"type": "awscli",
			"parameters": {
				"service": "ec2",
				"command": "describe-regions"
			}
		}, {
			"name": "invalid_command",
			"type": "awscli",
			"ignore_errors": true,
			"parameters": {
				"service": "ec2",
				"command": "not-existent-cmd"
			}
		}, {
			"name": "version",
			"type": "git"
		}, {
			"name": "notify_version_and_region",
			"type": "slack",
			"parameters": {
				"message": "*current repository version is:* `{{ version }}`\n\n*the aws regions are:* `{{{ regions.Regions }}}`"
			}
		}],
		"recovery": [{
			"name": "notify_error",
			"type": "slack",
			"parameters": {
				"message": "*an error occurred running step:* `{{ error.step }}`\n\n*error:* `{{{ error.exception }}}`"
			}
		}]
	}
}